generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ARTISAN
  AGENT
  ADMIN
}

enum ProjectStatus {
  DRAFT        // En cours de création
  PENDING      // En attente de devis
  PUBLISHED    // Publié et visible par les artisans
  ASSIGNED     // Attribué à un artisan
  IN_PROGRESS  // Travaux en cours
  COMPLETED    // Terminé
  CANCELLED    // Annulé
}

enum ProjectVisibility {
  PUBLIC       // Visible par tous les artisans
  PRIVATE      // Visible seulement par invitation
}

enum PropertyType {
  HOUSE
  APARTMENT
  COMMERCIAL
}

enum PropertyCondition {
  NEW          // Neuf
  GOOD         // Bon état
  OLD          // Vétuste
  DEMOLISH     // À démolir
}

enum AccessibilityLevel {
  EASY
  MODERATE
  DIFFICULT
}

enum UrgencyLevel {
  NORMAL     // Dans les 30 jours
  SOON       // Dans les 15 jours
  URGENT     // Dans les 7 jours
}

enum ExpressBookingStatus {
  PENDING      // En attente de confirmation
  CONFIRMED    // Confirmée
  IN_PROGRESS  // En cours
  COMPLETED    // Terminée
  CANCELLED    // Annulée
  NO_SHOW      // Client absent
}

enum TimeSlot {
  MORNING_8_12    // 8h-12h
  AFTERNOON_14_18 // 14h-18h
  EVENING_18_20   // 18h-20h
  ALL_DAY         // Toute la journée
}

enum PreferredTime {
  ANY
  MORNING
  AFTERNOON
  EVENING
  WEEKEND
}

enum ArtisanLevel {
  BEGINNER       // Débutant
  INTERMEDIATE   // Intermédiaire  
  CONFIRMED      // Confirmé
  EXPERT         // Expert
}

enum ArtisanVerificationStatus {
  PENDING    // En attente
  VERIFIED   // Vérifié
  REJECTED   // Rejeté
}

enum PaymentStatus {
  PENDING       // En attente
  PROCESSING    // En cours de traitement  
  SUCCEEDED     // Réussi
  FAILED        // Échoué
  CANCELLED     // Annulé
  REFUNDED      // Remboursé
}

enum PaymentType {
  EXPRESS_BOOKING    // Paiement service Express
  SUBSCRIPTION       // Paiement abonnement artisan
  PROJECT_DEPOSIT    // Acompte projet
}

enum SubscriptionStatus {
  ACTIVE        // Actif
  PAST_DUE      // En retard de paiement
  CANCELLED     // Annulé
  UNPAID        // Impayé
  INCOMPLETE    // Incomplet
}

enum SubscriptionPlanType {
  BASIC         // Plan de base
  PREMIUM       // Plan premium
  ENTERPRISE    // Plan entreprise
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          Role      @default(USER)
  phone         String?
  address       String?
  city          String?
  postalCode    String?
  bio           String?   @db.Text
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  projects      Project[]
  quotes        Quote[]   @relation("QuoteProvider")
  receivedQuotes Quote[]  @relation("QuoteClient")
  notifications Notification[]
  projectInvitations ProjectInvitation[]
  
  // Artisan specific
  artisanProfile ArtisanProfile?
  artisanSpecialties ArtisanSpecialty[]
  artisanDocuments ArtisanDocument[]
  
  // Favoris
  favoriteArtisans UserFavorite[] @relation("ClientFavorites")
  favoritedBy UserFavorite[] @relation("ArtisanFavorites")
  
  // Relations Express Booking
  expressBookings ExpressBooking[] @relation("UserExpressBookings")
  assignedExpressBookings ExpressBooking[] @relation("ArtisanExpressBookings")
  
  // Relations Paiements et Abonnements
  payments Payment[]
  subscription ArtisanSubscription?
}

model ArtisanProfile {
  id                    String                   @id @default(cuid())
  userId                String                   @unique
  companyName           String?
  siret                 String?
  yearsOfExperience     Int?
  projectsCompleted     Int                      @default(0)
  preferredRadius       Int?                     @default(50) // Rayon d'intervention en km
  level                 ArtisanLevel?
  averageRating         Float?
  verificationStatus    ArtisanVerificationStatus @default(PENDING)
  onboardingCompleted   Boolean                  @default(false)
  availableForWork      Boolean                  @default(true)
  assessmentCompleted   Boolean                  @default(false)
  assessmentScore       Int?
  createdAt             DateTime                 @default(now())
  updatedAt             DateTime                 @updatedAt
  
  // Relations
  user                  User                     @relation(fields: [userId], references: [id], onDelete: Cascade)
  skills                ArtisanSkill[]
}

model ArtisanSpecialty {
  id          String    @id @default(cuid())
  userId      String
  serviceId   String
  isPrimary   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  
  // Relations
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  service     Service   @relation(fields: [serviceId], references: [id])
  
  @@unique([userId, serviceId])
}

model ArtisanDocument {
  id          String    @id @default(cuid())
  userId      String
  type        String    // kbis, insurance, qualification, etc.
  title       String
  fileUrl     String
  fileType    String
  verified    Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Relations
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ArtisanSkill {
  id              String    @id @default(cuid())
  artisanProfileId String
  name            String
  selfRating      Int       // 1-5 auto-évaluation
  createdAt       DateTime  @default(now())
  
  // Relations
  artisanProfile  ArtisanProfile @relation(fields: [artisanProfileId], references: [id], onDelete: Cascade)
}

model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  icon        String?
  slug        String    @unique
  isActive    Boolean   @default(true)
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  services    Service[]
  projects    Project[]
}

model Service {
  id          String    @id @default(cuid())
  name        String    
  description String?
  slug        String    @unique
  isActive    Boolean   @default(true)
  order       Int       @default(0)
  icon        String?
  categoryId  String
  
  // Champs Express
  isExpressAvailable Boolean  @default(false)  // Si ce service est disponible en Express
  expressPrice       Float?                   // Prix fixe pour la réservation Express
  expressDescription String?  @db.Text        // Description spécifique pour l'Express
  estimatedDuration  Int?                     // Durée estimée en minutes
  isPopular          Boolean  @default(false) // Service populaire pour mise en avant
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  category           Category           @relation(fields: [categoryId], references: [id])
  projects           Project[]
  artisanSpecialties ArtisanSpecialty[]
  expressBookings    ExpressBooking[]
  
  @@unique([name, categoryId])
}

model Project {
  id              String           @id @default(cuid())
  title           String
  description     String           @db.Text
  budget          Float?
  budgetType      String?          // Fixed, Hourly, Range
  budgetMax       Float?           // Pour le cas d'une fourchette de budget
  
  // Détails de localisation
  location        String?
  postalCode      String?
  city            String?
  region          String?
  accessibility   AccessibilityLevel? 
  
  // Détails de planification
  startDate       DateTime?
  endDate         DateTime?
  urgencyLevel    UrgencyLevel?    
  flexibleDates   Boolean?         @default(true)
  preferredTime   PreferredTime?
  
  // Type de propriété
  propertyType    PropertyType?
  
  // Nouveaux champs pour les détails du bien
  surface         Float?           // Surface en m²
  floor           Int?             // Étage (0 = RDC)
  hasElevator     Boolean?         // Présence d'un ascenseur
  condition       PropertyCondition? // État actuel du bien
  
  // Statut et visibilité
  status          ProjectStatus    @default(DRAFT)
  visibility      ProjectVisibility @default(PUBLIC)
  
  // Relations obligatoires
  userId          String
  categoryId      String
  serviceId       String
  
  // Timestamps
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  completedAt     DateTime?
  
  // Relations
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  category        Category         @relation(fields: [categoryId], references: [id])
  service         Service          @relation(fields: [serviceId], references: [id])
  steps           ProjectStep[]
  images          ProjectImage[]
  quotes          Quote[]
  invitations     ProjectInvitation[]
  requirements    ProjectRequirement[]
  payments        Payment[]        // Paiements liés à ce projet
}

model ProjectRequirement {
  id          String    @id @default(cuid())
  projectId   String
  type        String    // material, skill, certification, etc.
  name        String
  description String?
  isRequired  Boolean   @default(true)
  createdAt   DateTime  @default(now())
  
  // Relations
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model ProjectStep {
  id          String    @id @default(cuid())
  stepNumber  Int
  title       String
  content     Json?
  completed   Boolean   @default(false)
  projectId   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Relations
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@unique([projectId, stepNumber])
}

model ProjectImage {
  id          String    @id @default(cuid())
  url         String
  projectId   String
  caption     String?
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  
  // Relations
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Quote {
  id              String    @id @default(cuid())
  amount          Float
  description     String?   @db.Text
  validUntil      DateTime?
  status          String    @default("pending") // pending, accepted, rejected, expired
  projectId       String
  providerId      String
  clientId        String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  materialsCost   Float?
  laborCost       Float?
  estimatedDays   Int?
  startDate       DateTime?
  
  // Relations
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  provider        User      @relation("QuoteProvider", fields: [providerId], references: [id])
  client          User      @relation("QuoteClient", fields: [clientId], references: [id])
  items           QuoteItem[]
}

model QuoteItem {
  id          String    @id @default(cuid())
  quoteId     String
  description String
  quantity    Float
  unitPrice   Float
  total       Float
  
  // Relations
  quote       Quote     @relation(fields: [quoteId], references: [id], onDelete: Cascade)
}

model ProjectInvitation {
  id          String    @id @default(cuid())
  projectId   String
  userId      String
  status      String    @default("pending") // pending, accepted, declined
  message     String?
  createdAt   DateTime  @default(now())
  respondedAt DateTime?
  
  // Relations
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([projectId, userId])
}

model Notification {
  id          String    @id @default(cuid())
  userId      String
  title       String
  message     String
  type        String    // info, success, warning, error
  isRead      Boolean   @default(false)
  link        String?
  createdAt   DateTime  @default(now())
  
  // Relations
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserFavorite {
  id         String   @id @default(cuid())
  clientId   String   // L'utilisateur qui ajoute en favori
  artisanId  String   // L'artisan ajouté en favori
  createdAt  DateTime @default(now())
  
  // Relations
  client  User @relation("ClientFavorites", fields: [clientId], references: [id], onDelete: Cascade)
  artisan User @relation("ArtisanFavorites", fields: [artisanId], references: [id], onDelete: Cascade)
  
  @@unique([clientId, artisanId])
}

model ExpressBooking {
  id          String                @id @default(cuid())
  userId      String
  serviceId   String
  
  // Détails de la réservation
  bookingDate DateTime              // Date de la prestation
  timeSlot    TimeSlot              // Créneau horaire
  price       Float                 // Prix fixe au moment de la réservation
  
  // Informations client
  clientName  String
  clientPhone String
  clientEmail String
  
  // Localisation
  address     String
  city        String
  postalCode  String
  floor       Int?                  // Étage si applicable
  hasElevator Boolean?              // Accès ascenseur
  
  // Détails supplémentaires
  notes       String?               @db.Text
  specialRequirements String?       @db.Text  // Exigences particulières
  
  // Gestion du statut
  status      ExpressBookingStatus  @default(PENDING)
  
  // Gestion artisan assigné
  assignedArtisanId String?
  assignedAt        DateTime?
  
  // Timestamps
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
  confirmedAt DateTime?             // Date de confirmation
  completedAt DateTime?             // Date de fin de prestation
  
  // Relations
  user            User      @relation("UserExpressBookings", fields: [userId], references: [id], onDelete: Cascade)
  service         Service   @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  assignedArtisan User?     @relation("ArtisanExpressBookings", fields: [assignedArtisanId], references: [id])
  payments        Payment[] // Paiements liés à cette réservation
  
  @@index([bookingDate])
  @@index([status])
  @@index([assignedArtisanId])
}

// Modèles de paiement et abonnement
model SubscriptionPlan {
  id              String              @id @default(cuid())
  name            String              // Nom du plan (Basic, Premium, etc.)
  description     String?             @db.Text
  type            SubscriptionPlanType
  price           Float               // Prix mensuel en euros
  stripeProductId String?             // ID du produit Stripe
  stripePriceId   String?             // ID du prix Stripe
  features        Json?               // Caractéristiques du plan (JSON)
  maxProjects     Int?                // Nombre max de projets simultanés
  maxRadius       Int?                // Rayon d'intervention max (km)
  commissionRate  Float?              // Taux de commission (%)
  isActive        Boolean             @default(true)
  isPopular       Boolean             @default(false)
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  
  // Relations
  subscriptions   ArtisanSubscription[]
}

model ArtisanSubscription {
  id                    String              @id @default(cuid())
  userId                String              @unique
  subscriptionPlanId    String
  stripeSubscriptionId  String?             @unique // ID de l'abonnement Stripe
  stripeCustomerId      String?             // ID du client Stripe
  status                SubscriptionStatus  @default(ACTIVE)
  currentPeriodStart    DateTime
  currentPeriodEnd      DateTime
  cancelAtPeriodEnd     Boolean             @default(false)
  cancelledAt           DateTime?
  trialStart            DateTime?
  trialEnd              DateTime?
  createdAt             DateTime            @default(now())
  updatedAt             DateTime            @updatedAt
  
  // Relations
  user                  User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscriptionPlan      SubscriptionPlan    @relation(fields: [subscriptionPlanId], references: [id])
  payments              Payment[]
  
  @@index([stripeSubscriptionId])
  @@index([status])
}

model Payment {
  id                String           @id @default(cuid())
  userId            String
  amount            Float            // Montant en euros
  currency          String           @default("eur")
  status            PaymentStatus    @default(PENDING)
  type              PaymentType
  stripePaymentId   String?          @unique // ID du paiement Stripe
  stripeInvoiceId   String?          // ID de la facture Stripe (pour les abonnements)
  description       String?
  metadata          Json?            // Métadonnées additionnelles
  
  // Relations optionnelles selon le type de paiement
  expressBookingId      String?              // Pour les paiements Express
  artisanSubscriptionId String?              // Pour les paiements d'abonnement
  projectId             String?              // Pour les acomptes projet
  
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  paidAt            DateTime?        // Date de paiement effectif
  
  // Relations
  user                  User                     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expressBooking        ExpressBooking?          @relation(fields: [expressBookingId], references: [id])
  artisanSubscription   ArtisanSubscription?     @relation(fields: [artisanSubscriptionId], references: [id])
  project               Project?                 @relation(fields: [projectId], references: [id])
  
  @@index([stripePaymentId])
  @@index([status])
  @@index([type])
  @@index([userId])
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Testimonial {
  id          String    @id @default(cuid())
  firstName   String
  lastName    String
  companyName String?
  role        String?    // Poste/fonction
  rating      Int        // Note sur 5
  comment     String     @db.Text
  avatarUrl   String?    // URL du logo/avatar
  isActive    Boolean   @default(true)
  order       Int       @default(0)  // Pour trier les témoignages
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([isActive, order])
}
